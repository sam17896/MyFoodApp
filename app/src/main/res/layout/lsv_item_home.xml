<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    card_view:layout_width="match_parent"
    card_view:layout_height="wrap_content">
    <android.support.v7.widget.CardView card_view:layout_width="match_parent" card_view:layout_height="wrap_content"  app:cardBackgroundColor="#fff" app:cardCornerRadius="0dp" app:cardElevation="2sp" app:cardUseCompatPadding="true">

        <com.balysv.materialripple.MaterialRippleLayout
            card_view:id="@+id/ripple"
            card_view:layout_width="match_parent"
            card_view:layout_height="wrap_content"
            app:mrl_rippleColor="@color/colorPrimary"
            app:mrl_rippleOverlay="true" app:mrl_rippleAlpha="0.2"
            app:mrl_rippleHover="true" app:mrl_rippleDelayClick="true">

            <LinearLayout card_view:orientation="vertical" card_view:id="@+id/linearLayout" card_view:layout_width="match_parent" card_view:layout_height="match_parent">
                <com.solodroid.yourrestaurantapp.utilities.SquareImageView card_view:id="@+id/thumbnail" card_view:layout_width="match_parent" card_view:layout_height="match_parent" card_view:scaleType="centerCrop" />
                <TextView card_view:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" card_view:id="@+id/title" card_view:padding="10dp" card_view:layout_width="match_parent" card_view:layout_height="wrap_content" card_view:text="title" />
            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
